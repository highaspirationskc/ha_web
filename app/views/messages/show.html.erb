<%= turbo_stream_from "message_thread_#{@message.thread_root.id}" %>
<div class="py-6">
  <div class="px-4 sm:px-0">
    <div class="flex items-center justify-between mb-4">
      <%= render "shared/breadcrumbs", items: [
        { label: "Inbox", path: messages_path },
        { label: @message.thread_root.subject.truncate(30) }
      ] %>
      <% thread_message_ids = @message.thread_root.thread_messages.pluck(:id) %>
      <% is_recipient = current_user.message_recipients.where(message_id: thread_message_ids).exists? %>
      <% if is_recipient %>
        <% is_archived = current_user.message_recipients.where(message_id: thread_message_ids, archived: true).exists? %>
        <% if is_archived %>
          <%= button_to "Unarchive", unarchive_message_path(@message), method: :post, class: "inline-flex items-center px-3 py-1.5 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
        <% else %>
          <%= button_to "Archive", archive_message_path(@message), method: :post, class: "inline-flex items-center px-3 py-1.5 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
        <% end %>
      <% end %>
    </div>

    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
        <h1 class="text-xl font-bold text-gray-900"><%= @message.thread_root.subject %></h1>
<p id="thread-message-count" class="mt-1 text-sm text-gray-500">
          <%= @thread_messages.count %> message<%= @thread_messages.count == 1 ? '' : 's' %> in this thread
        </p>
      </div>

      <div id="thread-messages" class="divide-y divide-gray-200">
        <% @thread_messages.each do |msg| %>
          <%= render "message", message: msg %>
        <% end %>
      </div>

      <% if @message.thread_root.no_replies? %>
        <% if @message.thread_root.author == current_user %>
          <div class="px-4 py-5 sm:px-6 bg-gray-50 border-t border-gray-200">
            <p class="text-sm text-gray-500">Replies are disabled for this message.</p>
          </div>
        <% end %>
      <% elsif @reply_recipients.any? %>
        <div class="px-4 py-5 sm:px-6 bg-gray-50 border-t border-gray-200">
          <h3 class="text-sm font-medium text-gray-900 mb-4">Reply</h3>
          <p class="text-xs text-gray-500 mb-3">
            To: <%= @reply_recipients.map { |r| "#{r.first_name} #{r.last_name}" }.join(", ") %>
          </p>
          <%= form_with model: Message.new, url: messages_path, method: :post, id: "new_message", class: "space-y-4" do |f| %>
            <%= f.hidden_field :parent_id, value: @message.thread_root.id %>
            <%= f.hidden_field :subject, value: @message.thread_root.subject.start_with?("Re:") ? @message.thread_root.subject : "Re: #{@message.thread_root.subject}" %>
            <% @reply_recipients.each do |recipient| %>
              <input type="hidden" name="message[recipient_ids][]" value="<%= recipient.id %>">
            <% end %>

            <div>
              <%= f.text_area :message, rows: 4, required: true, placeholder: "Write your reply...", class: "block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
            </div>

            <div class="flex justify-end">
              <%= f.submit "Send Reply", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 cursor-pointer" %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
