<div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
  <div class="px-4 py-6 sm:px-0">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold text-gray-900">Dashboard</h1>
      <% if @current_season %>
        <span class="px-3 py-1 text-sm font-semibold rounded-full bg-indigo-100 text-indigo-800">
          <%= @current_season.name %> Season
        </span>
      <% end %>
    </div>

    <% if @current_season %>
      <div class="mt-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Team Leaderboard</h2>
        <div class="flex flex-col">
          <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
            <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
              <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
                <table class="min-w-full divide-y divide-gray-200">
                  <thead class="bg-gray-50">
                    <tr>
                      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Rank
                      </th>
                      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Team
                      </th>
                      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Members
                      </th>
                      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Total Points
                      </th>
                    </tr>
                  </thead>
                  <tbody class="bg-white divide-y divide-gray-200">
                    <% if @team_standings.any? %>
                      <%
                        # Calculate ranks with tie handling (dense ranking)
                        current_rank = 1
                        previous_points = nil
                      %>
                      <% @team_standings.each_with_index do |standing, index| %>
                        <%
                          # Increment rank only if points changed (dense ranking)
                          if previous_points && standing[:points] < previous_points
                            current_rank += 1
                          end
                          previous_points = standing[:points]
                        %>
                        <tr class="<%= 'bg-yellow-50' if current_rank == 1 %>">
                          <td class="px-6 py-4 whitespace-nowrap">
                            <div class="flex items-center">
                              <% if current_rank == 1 %>
                                <span class="text-2xl">ðŸ¥‡</span>
                              <% elsif current_rank == 2 %>
                                <span class="text-2xl">ðŸ¥ˆ</span>
                              <% elsif current_rank == 3 %>
                                <span class="text-2xl">ðŸ¥‰</span>
                              <% else %>
                                <span class="text-sm font-medium text-gray-900"><%= current_rank %></span>
                              <% end %>
                            </div>
                          </td>
                          <td class="px-6 py-4 whitespace-nowrap">
                            <%= link_to standing[:team].name, team_path(standing[:team]), class: "text-sm font-medium text-gray-900 hover:text-indigo-600" %>
                            <div class="text-sm text-gray-500">
                              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-<%= standing[:team].color %>-100 text-<%= standing[:team].color %>-800">
                                <%= standing[:team].color.titleize %>
                              </span>
                            </div>
                          </td>
                          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            <%= standing[:member_count] %> <%= "member".pluralize(standing[:member_count]) %>
                          </td>
                          <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-2xl font-bold text-gray-900"><%= standing[:points] %></div>
                            <div class="text-xs text-gray-500">points</div>
                          </td>
                        </tr>
                      <% end %>
                    <% else %>
                      <tr>
                        <td colspan="4" class="px-6 py-4 text-center text-sm text-gray-500">No team data for this season</td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Top Mentees Section -->
      <div class="mt-8 grid grid-cols-1 gap-6 lg:grid-cols-2">
        <!-- Top Season Mentees -->
        <div>
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Top Mentees - Season</h2>
          <div class="bg-white shadow overflow-hidden sm:rounded-lg">
            <ul class="divide-y divide-gray-200">
              <% if @top_season_mentees.any? %>
                <% @top_season_mentees.each_with_index do |mentee_data, index| %>
                  <li class="<%= 'bg-yellow-50' if index == 0 %>">
                    <div class="px-4 py-4 flex items-center sm:px-6">
                      <div class="min-w-0 flex-1 sm:flex sm:items-center sm:justify-between">
                        <div class="flex items-center">
                          <% if index == 0 %>
                            <span class="text-3xl mr-3">ðŸ¥‡</span>
                          <% elsif index == 1 %>
                            <span class="text-3xl mr-3">ðŸ¥ˆ</span>
                          <% elsif index == 2 %>
                            <span class="text-3xl mr-3">ðŸ¥‰</span>
                          <% else %>
                            <span class="text-lg font-medium text-gray-500 mr-3 w-8"><%= index + 1 %></span>
                          <% end %>
                          <div>
                            <%= link_to user_path(mentee_data[:user]), class: "text-sm font-medium text-indigo-600 hover:text-indigo-900" do %>
                              <%= mentee_data[:user].first_name %> <%= mentee_data[:user].last_name %>
                            <% end %>
                            <div class="text-sm text-gray-500">
                              <% if mentee_data[:user].mentee&.team %>
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-<%= mentee_data[:user].mentee&.team.color %>-100 text-<%= mentee_data[:user].mentee&.team.color %>-800">
                                  <%= mentee_data[:user].mentee&.team.name %>
                                </span>
                              <% end %>
                            </div>
                          </div>
                        </div>
                        <div class="mt-4 flex-shrink-0 sm:mt-0 sm:ml-5">
                          <div class="text-2xl font-bold text-gray-900"><%= mentee_data[:points] %></div>
                          <div class="text-xs text-gray-500 text-right">points</div>
                        </div>
                      </div>
                    </div>
                  </li>
                <% end %>
              <% else %>
                <li class="px-4 py-4 text-center text-sm text-gray-500">No mentee activity this season</li>
              <% end %>
            </ul>
          </div>
        </div>

        <!-- Top Week Mentees -->
        <div>
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Top Mentees - This Week</h2>
          <div class="bg-white shadow overflow-hidden sm:rounded-lg">
            <ul class="divide-y divide-gray-200">
              <% if @top_week_mentees.any? %>
                <% @top_week_mentees.each_with_index do |mentee_data, index| %>
                  <li class="<%= 'bg-yellow-50' if index == 0 %>">
                    <div class="px-4 py-4 flex items-center sm:px-6">
                      <div class="min-w-0 flex-1 sm:flex sm:items-center sm:justify-between">
                        <div class="flex items-center">
                          <% if index == 0 %>
                            <span class="text-3xl mr-3">ðŸ¥‡</span>
                          <% elsif index == 1 %>
                            <span class="text-3xl mr-3">ðŸ¥ˆ</span>
                          <% elsif index == 2 %>
                            <span class="text-3xl mr-3">ðŸ¥‰</span>
                          <% else %>
                            <span class="text-lg font-medium text-gray-500 mr-3 w-8"><%= index + 1 %></span>
                          <% end %>
                          <div>
                            <%= link_to user_path(mentee_data[:user]), class: "text-sm font-medium text-indigo-600 hover:text-indigo-900" do %>
                              <%= mentee_data[:user].first_name %> <%= mentee_data[:user].last_name %>
                            <% end %>
                            <div class="text-sm text-gray-500">
                              <% if mentee_data[:user].mentee&.team %>
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-<%= mentee_data[:user].mentee&.team.color %>-100 text-<%= mentee_data[:user].mentee&.team.color %>-800">
                                  <%= mentee_data[:user].mentee&.team.name %>
                                </span>
                              <% end %>
                            </div>
                          </div>
                        </div>
                        <div class="mt-4 flex-shrink-0 sm:mt-0 sm:ml-5">
                          <div class="text-2xl font-bold text-gray-900"><%= mentee_data[:points] %></div>
                          <div class="text-xs text-gray-500 text-right">points</div>
                        </div>
                      </div>
                    </div>
                  </li>
                <% end %>
              <% else %>
                <li class="px-4 py-4 text-center text-sm text-gray-500">No mentee activity this week</li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% else %>
      <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4">
        <div class="flex">
          <div class="ml-3">
            <p class="text-sm text-yellow-700">
              No active Olympic season found. Please configure the Olympic seasons.
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
