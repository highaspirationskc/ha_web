<div data-controller="image-picker">
  <%= form_with(model: event, url: event.persisted? ? event_path(event) : events_path, class: "space-y-6") do |form| %>
    <% if event.errors.any? %>
      <div class="rounded-md bg-red-50 p-4">
        <h3 class="text-sm font-medium text-red-800">
          <%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:
        </h3>
        <ul class="list-disc list-inside text-sm text-red-700 mt-2">
          <% event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="bg-white shadow px-4 py-5 sm:rounded-lg sm:p-6">
      <div class="md:grid md:grid-cols-3 md:gap-6">
        <div class="md:col-span-1">
          <h3 class="text-lg font-medium leading-6 text-gray-900">Event Information</h3>
          <p class="mt-1 text-sm text-gray-500">Enter the details for this event.</p>
        </div>
        <div class="mt-5 md:mt-0 md:col-span-2">
          <div class="grid grid-cols-6 gap-6">
            <div class="col-span-6">
              <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
              <%= form.text_field :name, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
            </div>

            <div class="col-span-6">
              <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
              <%= form.text_area :description, rows: 4, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
            </div>

            <div class="col-span-6 sm:col-span-3">
              <%= form.label :event_date, class: "block text-sm font-medium text-gray-700" %>
              <%= form.datetime_field :event_date, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
            </div>

            <div class="col-span-6 sm:col-span-3">
              <%= form.label :location, class: "block text-sm font-medium text-gray-700" %>
              <%= form.text_field :location, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
            </div>

            <div class="col-span-6 sm:col-span-3">
              <%= form.label :event_type_id, "Event Type", class: "block text-sm font-medium text-gray-700" %>
              <%= form.collection_select :event_type_id, EventType.all, :id, :name, { prompt: "Select an event type" }, { class: "mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" } %>
            </div>

            <div class="col-span-6 sm:col-span-3">
              <%= form.label :created_by_id, "Created By", class: "block text-sm font-medium text-gray-700" %>
              <%= form.collection_select :created_by_id, User.all, :id, :email, { prompt: "Select a user" }, { class: "mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" } %>
            </div>

            <div class="col-span-6">
              <%= form.label :image_id, "Event Image", class: "block text-sm font-medium text-gray-700" %>
              <%= form.hidden_field :image_id, data: { image_picker_target: "input" } %>

              <div class="mt-2">
                <div data-image-picker-target="placeholder" class="<%= event.image.present? ? 'hidden' : '' %> flex items-center justify-center w-full h-32 border-2 border-gray-300 border-dashed rounded-lg bg-gray-50">
                  <button type="button" data-action="click->image-picker#openModal" class="text-sm text-gray-600 hover:text-indigo-600">
                    <svg class="mx-auto h-8 w-8 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m2.25 15.75 5.159-5.159a2.25 2.25 0 0 1 3.182 0l5.159 5.159m-1.5-1.5 1.409-1.409a2.25 2.25 0 0 1 3.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 0 0 1.5-1.5V6a1.5 1.5 0 0 0-1.5-1.5H3.75A1.5 1.5 0 0 0 2.25 6v12a1.5 1.5 0 0 0 1.5 1.5Zm10.5-11.25h.008v.008h-.008V8.25Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" />
                    </svg>
                    <span class="mt-2 block">Choose an image</span>
                  </button>
                </div>

                <div data-image-picker-target="preview" class="<%= event.image.blank? ? 'hidden' : '' %> relative">
                  <div class="flex items-center gap-4 p-3 bg-gray-50 rounded-lg border border-gray-200">
                    <%= image_tag event.image&.thumbnail_url || "", alt: "Selected image", class: "h-20 w-20 object-cover rounded", data: { image_picker_target: "previewImage" } %>
                    <div class="flex-1">
                      <p data-image-picker-target="previewName" class="text-sm font-medium text-gray-900"><%= event.image&.filename %></p>
                      <div class="mt-2 flex gap-2">
                        <button type="button" data-action="click->image-picker#openModal" class="text-xs text-indigo-600 hover:text-indigo-500">Change</button>
                        <button type="button" data-action="click->image-picker#clear" class="text-xs text-red-600 hover:text-red-500">Remove</button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="flex justify-end space-x-3">
      <%= link_to "Cancel", event.persisted? ? event_path(event) : events_path, class: "inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
      <%= form.submit class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
    </div>
  <% end %>

  <!-- Image Picker Modal (outside form to allow nested upload form) -->
  <div data-image-picker-target="modal" class="hidden fixed inset-0 z-50 overflow-y-auto">
    <div data-image-picker-target="backdrop" data-action="click->image-picker#closeOnBackdrop" class="fixed inset-0 bg-black/50 transition-opacity">
      <div class="flex min-h-full items-center justify-center p-4">
        <div class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg" data-action="click->image-picker#stopPropagation">
          <div class="bg-white">
            <div class="flex items-center justify-between px-4 py-3 border-b border-gray-200">
              <h3 class="text-lg font-semibold text-gray-900">Select Image</h3>
              <button type="button" data-action="click->image-picker#closeModal" class="text-gray-400 hover:text-gray-500">
                <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
              </button>
            </div>
            <div data-image-picker-target="modalContent" class="max-h-96 overflow-y-auto">
              <p class="p-4 text-center text-gray-500">Loading...</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
