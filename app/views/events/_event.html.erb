<div id="<%= dom_id event %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= event.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= event.description %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Event date:</strong>
    <%= event.event_date %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Location:</strong>
    <%= event.location %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Image url:</strong>
    <%= event.image_url %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Event type:</strong>
    <%= event.event_type_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Created by:</strong>
    <%= event.created_by_id %>
  </div>
</div>
