<div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
  <div class="px-4 py-6 sm:px-0">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold text-gray-900">Events</h1>
      <div class="flex items-center gap-4">
        <!-- View Toggle -->
        <div class="inline-flex rounded-md shadow-sm" role="group">
          <%= link_to events_path,
              class: "px-3 py-2 text-sm font-medium rounded-l-md border #{@view_mode == :calendar ? 'bg-indigo-600 text-white border-indigo-600' : 'bg-white text-gray-700 border-gray-300 hover:bg-gray-50'}",
              title: "Calendar view" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          <% end %>
          <%= link_to events_path(view: "list"),
              class: "px-3 py-2 text-sm font-medium rounded-r-md border-t border-b border-r #{@view_mode == :list ? 'bg-indigo-600 text-white border-indigo-600' : 'bg-white text-gray-700 border-gray-300 hover:bg-gray-50'}",
              title: "List view" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16" />
            </svg>
          <% end %>
        </div>

        <% if current_user.can?(:create, :events) %>
          <%= link_to "New Event", new_event_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700" %>
        <% end %>
      </div>
    </div>

    <% if notice.present? %>
      <div class="rounded-md bg-green-50 p-4 mb-6">
        <p class="text-sm font-medium text-green-800" id="notice"><%= notice %></p>
      </div>
    <% end %>

    <% if @view_mode == :list %>
      <%= render "list" %>
    <% else %>
      <%= render "calendar" %>
    <% end %>
  </div>
</div>
