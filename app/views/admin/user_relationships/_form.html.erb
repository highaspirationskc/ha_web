<%= form_with(model: user_relationship, url: user_relationship.persisted? ? admin_user_relationship_path(user_relationship) : admin_user_relationships_path, class: "space-y-6") do |form| %>
  <% if user_relationship.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <h3 class="text-sm font-medium text-red-800">
        <%= pluralize(user_relationship.errors.count, "error") %> prohibited this user relationship from being saved:
      </h3>
      <ul class="list-disc list-inside text-sm text-red-700 mt-2">
        <% user_relationship.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="bg-white shadow px-4 py-5 sm:rounded-lg sm:p-6">
    <div class="md:grid md:grid-cols-3 md:gap-6">
      <div class="md:col-span-1">
        <h3 class="text-lg font-medium leading-6 text-gray-900">User Relationship Information</h3>
        <p class="mt-1 text-sm text-gray-500">Enter the details for this user relationship.</p>
      </div>
      <div class="mt-5 md:mt-0 md:col-span-2">
        <div class="grid grid-cols-6 gap-6">
          <div class="col-span-6 sm:col-span-3">
            <%= form.label :user_id, "User", class: "block text-sm font-medium text-gray-700" %>
            <%= form.collection_select :user_id, User.all, :id, :email, { prompt: "Select a user" }, { class: "mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" } %>
          </div>

          <div class="col-span-6 sm:col-span-3">
            <%= form.label :related_user_id, "Related User", class: "block text-sm font-medium text-gray-700" %>
            <%= form.collection_select :related_user_id, User.all, :id, :email, { prompt: "Select a related user" }, { class: "mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" } %>
          </div>

          <div class="col-span-6">
            <%= form.label :relationship_type, "Relationship Type", class: "block text-sm font-medium text-gray-700" %>
            <%= form.select :relationship_type, UserRelationship.relationship_types.keys.map { |k| [k.titleize, k] }, {}, { class: "mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" } %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to "Cancel", user_relationship.persisted? ? admin_user_relationship_path(user_relationship) : admin_user_relationships_path, class: "inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
    <%= form.submit class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
  </div>
<% end %>
