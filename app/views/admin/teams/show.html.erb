<div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
  <div class="px-4 py-6 sm:px-0">
    <div class="flex justify-between items-center mb-6">
      <nav class="flex" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-3">
          <li class="inline-flex items-center">
            <%= link_to admin_teams_path, class: "inline-flex items-center text-sm font-medium text-gray-700 hover:text-indigo-600" do %>
              Teams
            <% end %>
          </li>
          <li aria-current="page">
            <div class="flex items-center">
              <svg class="w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
              </svg>
              <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2"><%= @team.name %></span>
            </div>
          </li>
        </ol>
      </nav>
      <div class="flex space-x-4">
        <%= link_to "Edit", edit_admin_team_path(@team), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200" %>
        <%= button_to "Delete Team", admin_team_path(@team), method: :delete, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700", data: { confirm: "Are you sure?" } %>
      </div>
    </div>

    <% if notice.present? %>
      <div class="rounded-md bg-green-50 p-4 mb-6">
        <p class="text-sm font-medium text-green-800" id="notice"><%= notice %></p>
      </div>
    <% end %>

    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <div class="px-4 py-5 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Team Information</h3>
      </div>
      <div class="border-t border-gray-200">
        <dl>
          <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Name</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @team.name %></dd>
          </div>
          <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Color</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                <%= @team.color.titleize %>
              </span>
            </dd>
          </div>
          <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Icon URL</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
              <% if @team.icon_url.present? %>
                <% safe_url = @team.icon_url.to_s %>
                <%= link_to h(safe_url), h(safe_url), target: "_blank", class: "text-indigo-600 hover:text-indigo-900" %>
              <% else %>
                â€”
              <% end %>
            </dd>
          </div>
        </dl>
      </div>
    </div>

    <!-- Mentors -->
    <div class="mt-6">
      <div class="flex justify-between items-center mb-4">
        <h3 class="text-lg leading-6 font-medium text-gray-900">
          Mentors (<%= @team.mentors.count %>)
        </h3>
        <% if @current_season %>
          <span class="px-3 py-1 text-sm font-semibold rounded-full bg-indigo-100 text-indigo-800">
            <%= @current_season.name %> Season
          </span>
        <% end %>
      </div>
      <div class="flex flex-col">
        <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
          <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
            <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
              <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                  <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Rank
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Name
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Email
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Role
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Season Points
                    </th>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                  <% mentor_points = @user_points.select { |up| up[:user].mentor? } %>
                  <% if mentor_points.any? %>
                    <%
                      # Calculate ranks with tie handling (dense ranking)
                      current_rank = 1
                      previous_points = nil
                    %>
                    <% mentor_points.each_with_index do |user_point, index| %>
                      <%
                        # Increment rank only if points changed (dense ranking)
                        if previous_points && user_point[:points] < previous_points
                          current_rank += 1
                        end
                        previous_points = user_point[:points]
                      %>
                      <tr class="<%= 'bg-yellow-50' if current_rank == 1 && user_point[:points] > 0 %>">
                        <td class="px-6 py-4 whitespace-nowrap">
                          <div class="flex items-center">
                            <% if current_rank == 1 && user_point[:points] > 0 %>
                              <span class="text-2xl">ðŸ¥‡</span>
                            <% elsif current_rank == 2 && user_point[:points] > 0 %>
                              <span class="text-2xl">ðŸ¥ˆ</span>
                            <% elsif current_rank == 3 && user_point[:points] > 0 %>
                              <span class="text-2xl">ðŸ¥‰</span>
                            <% else %>
                              <span class="text-sm font-medium text-gray-900"><%= current_rank %></span>
                            <% end %>
                          </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                          <%= link_to admin_user_path(user_point[:user]), class: "text-sm font-medium text-indigo-600 hover:text-indigo-900" do %>
                            <%= user_point[:user].first_name %> <%= user_point[:user].last_name %>
                          <% end %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                          <%= user_point[:user].email %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                          <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                            <%= user_point[:user].role.titleize %>
                          </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                          <div class="text-2xl font-bold text-gray-900"><%= user_point[:points] %></div>
                          <div class="text-xs text-gray-500">points</div>
                        </td>
                      </tr>
                    <% end %>
                  <% else %>
                    <tr>
                      <td colspan="5" class="px-6 py-4 text-center text-sm text-gray-500">
                        No mentors on this team
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>

