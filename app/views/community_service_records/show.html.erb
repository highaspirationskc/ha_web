<div class="max-w-3xl mx-auto py-6 sm:px-6 lg:px-8">
  <div class="px-4 py-6 sm:px-0">
    <div class="mb-6">
      <%= link_to "&larr; Back to Community Service".html_safe, community_service_records_path, class: "text-indigo-600 hover:text-indigo-900" %>
    </div>

    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <div class="px-4 py-5 sm:px-6 flex justify-between items-center">
        <div>
          <h3 class="text-lg leading-6 font-medium text-gray-900"><%= @record.event %></h3>
          <p class="mt-1 max-w-2xl text-sm text-gray-500">
            <%= @record.event_date.strftime("%B %d, %Y") %>
          </p>
        </div>
        <div>
          <% if @record.approved? %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
              Approved
            </span>
          <% else %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800">
              Denied
            </span>
          <% end %>
        </div>
      </div>
      <div class="border-t border-gray-200">
        <dl>
          <% unless current_user.mentee? %>
            <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
              <dt class="text-sm font-medium text-gray-500">Mentee</dt>
              <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @record.mentee.user.email %></dd>
            </div>
          <% end %>
          <div class="<%= current_user.mentee? ? 'bg-gray-50' : 'bg-white' %> px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Hours</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= number_with_precision(@record.hours, precision: 1) %></dd>
          </div>
          <div class="<%= current_user.mentee? ? 'bg-white' : 'bg-gray-50' %> px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Description</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @record.description.presence || "No description provided" %></dd>
          </div>
          <div class="<%= current_user.mentee? ? 'bg-gray-50' : 'bg-white' %> px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Logged</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @record.created_at.strftime("%B %d, %Y at %l:%M %p") %></dd>
          </div>
        </dl>
      </div>
    </div>

    <div class="mt-6 flex gap-4">
      <% if current_user.can?(:edit, :community_service_records) %>
        <%= link_to "Edit", edit_community_service_record_path(@record), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700" %>
      <% end %>
      <% if current_user.can?(:delete, :community_service_records) %>
        <%= button_to "Delete", community_service_record_path(@record), method: :delete, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-red-700 bg-red-100 hover:bg-red-200", data: { turbo_confirm: "Are you sure you want to delete this record?" } %>
      <% end %>
    </div>
  </div>
</div>
