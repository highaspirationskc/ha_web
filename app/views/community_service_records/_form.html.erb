<%= form_with model: @record, class: "space-y-6" do |form| %>
  <% if @record.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(@record.errors.count, "error") %> prohibited this record from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% @record.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <% if @mentees.present? && !@record.persisted? %>
    <div>
      <%= form.label :mentee_id, "Mentee", class: "block text-sm font-medium text-gray-700" %>
      <%= form.collection_select :mentee_id, @mentees, :id, ->(m) { "#{m.user.first_name} #{m.user.last_name}".strip }, { prompt: "Select a mentee" }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>
  <% end %>

  <div>
    <%= form.label :event, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :event, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "e.g., Mowed lawn, Volunteered at food bank" %>
  </div>

  <div>
    <%= form.label :event_date, "Date of Service", class: "block text-sm font-medium text-gray-700" %>
    <%= form.date_field :event_date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", max: Date.current %>
  </div>

  <div>
    <%= form.label :hours, class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :hours, step: 0.5, min: 0.5, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "e.g., 2.5" %>
  </div>

  <div>
    <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :description, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "Describe what you did..." %>
  </div>

  <% if (current_user.admin? || current_user.staff?) && @record.persisted? %>
    <div class="flex items-center">
      <%= form.check_box :approved, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
      <%= form.label :approved, "Approved", class: "ml-2 block text-sm text-gray-900" %>
    </div>
  <% end %>

  <div class="flex justify-end gap-4">
    <%= link_to "Cancel", community_service_records_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
    <%= form.submit class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 cursor-pointer" %>
  </div>
<% end %>
