<div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
  <div class="px-4 py-6 sm:px-0">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold text-gray-900">Media Library</h1>
    </div>

    <% if notice.present? %>
      <div class="rounded-md bg-green-50 p-4 mb-6">
        <p class="text-sm font-medium text-green-800"><%= notice %></p>
      </div>
    <% end %>

    <% if alert.present? %>
      <div class="rounded-md bg-red-50 p-4 mb-6">
        <p class="text-sm font-medium text-red-800"><%= alert %></p>
      </div>
    <% end %>

    <!-- Media Type Tabs -->
    <div class="mb-4">
      <nav class="flex space-x-4" aria-label="Media Type">
        <% [["image", "Images"], ["video", "Videos"]].each do |type, label| %>
          <%= link_to media_path(media_type: type, category: @category),
              class: "px-4 py-2 text-sm font-medium rounded-md #{@media_type == type ? 'bg-indigo-100 text-indigo-700' : 'text-gray-500 hover:text-gray-700 hover:bg-gray-100'}" do %>
            <% if type == "image" %>
              <svg class="inline-block w-4 h-4 mr-1.5 -mt-0.5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="m2.25 15.75 5.159-5.159a2.25 2.25 0 0 1 3.182 0l5.159 5.159m-1.5-1.5 1.409-1.409a2.25 2.25 0 0 1 3.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 0 0 1.5-1.5V6a1.5 1.5 0 0 0-1.5-1.5H3.75A1.5 1.5 0 0 0 2.25 6v12a1.5 1.5 0 0 0 1.5 1.5Zm10.5-11.25h.008v.008h-.008V8.25Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" />
              </svg>
            <% else %>
              <svg class="inline-block w-4 h-4 mr-1.5 -mt-0.5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="m15.75 10.5 4.72-4.72a.75.75 0 0 1 1.28.53v11.38a.75.75 0 0 1-1.28.53l-4.72-4.72M4.5 18.75h9a2.25 2.25 0 0 0 2.25-2.25v-9a2.25 2.25 0 0 0-2.25-2.25h-9A2.25 2.25 0 0 0 2.25 7.5v9a2.25 2.25 0 0 0 2.25 2.25Z" />
              </svg>
            <% end %>
            <%= label %>
          <% end %>
        <% end %>
      </nav>
    </div>

    <!-- Category Tabs (images only) -->
    <% if @media_type == "image" %>
      <div class="border-b border-gray-200 mb-6">
        <nav class="-mb-px flex space-x-8" aria-label="Tabs">
          <% [["general", "Images"], ["avatar", "Avatars"], ["icon", "Icons"]].each do |category, label| %>
            <%= link_to label, media_path(media_type: @media_type, category: category),
                class: "whitespace-nowrap border-b-2 py-4 px-1 text-sm font-medium #{@category == category ? 'border-indigo-500 text-indigo-600' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'}" %>
          <% end %>
        </nav>
      </div>
    <% end %>

    <% if current_user.can?(:create, :media) %>
      <div class="bg-white shadow sm:rounded-lg mb-6" data-controller="upload-form">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-base font-semibold text-gray-900">Upload New <%= @media_type == "video" ? "Video" : @category.titleize %></h3>
          <%= form_with url: media_path, method: :post, multipart: true, class: "mt-4", data: { upload_form_target: "form" } do |f| %>
            <%= f.hidden_field :category, value: @category %>
            <%= f.hidden_field :media_type, value: @media_type %>
            <div class="flex flex-col sm:flex-row gap-4">
              <div class="flex-1">
                <%= f.file_field :file, accept: @media_type == "video" ? "video/*" : "image/*", class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" %>
              </div>
              <% if @media_type == "image" %>
                <div class="flex-1">
                  <%= f.text_field :alt_text, placeholder: "Alt text (optional)", class: "block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
                </div>
              <% end %>
              <div>
                <%= f.submit "Upload", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 cursor-pointer", data: { upload_form_target: "submit" } %>
              </div>
            </div>
            <!-- Upload Progress -->
            <div class="hidden mt-4" data-upload-form-target="progress">
              <div class="flex items-center gap-3">
                <div class="flex-1 bg-gray-200 rounded-full h-2.5">
                  <div class="bg-indigo-600 h-2.5 rounded-full transition-all duration-300" style="width: 0%" data-upload-form-target="progressBar"></div>
                </div>
                <span class="text-sm text-gray-600 whitespace-nowrap" data-upload-form-target="progressText">Uploading...</span>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <% if @media.any? %>
      <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4">
        <% @media.each do |medium| %>
          <%= render "medium", medium: medium %>
        <% end %>
      </div>

      <div class="mt-6">
        <%= paginate @media %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <% if @media_type == "video" %>
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m15.75 10.5 4.72-4.72a.75.75 0 0 1 1.28.53v11.38a.75.75 0 0 1-1.28.53l-4.72-4.72M4.5 18.75h9a2.25 2.25 0 0 0 2.25-2.25v-9a2.25 2.25 0 0 0-2.25-2.25h-9A2.25 2.25 0 0 0 2.25 7.5v9a2.25 2.25 0 0 0 2.25 2.25Z" />
          </svg>
          <h3 class="mt-2 text-sm font-semibold text-gray-900">No videos</h3>
          <p class="mt-1 text-sm text-gray-500">Upload your first video using the form above.</p>
        <% else %>
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m2.25 15.75 5.159-5.159a2.25 2.25 0 0 1 3.182 0l5.159 5.159m-1.5-1.5 1.409-1.409a2.25 2.25 0 0 1 3.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 0 0 1.5-1.5V6a1.5 1.5 0 0 0-1.5-1.5H3.75A1.5 1.5 0 0 0 2.25 6v12a1.5 1.5 0 0 0 1.5 1.5Zm10.5-11.25h.008v.008h-.008V8.25Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" />
          </svg>
          <h3 class="mt-2 text-sm font-semibold text-gray-900">No <%= @category.pluralize %></h3>
          <p class="mt-1 text-sm text-gray-500">Upload your first <%= @category %> using the form above.</p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
