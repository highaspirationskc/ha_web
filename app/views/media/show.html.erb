<div class="max-w-4xl mx-auto py-6 sm:px-6 lg:px-8">
  <div class="px-4 py-6 sm:px-0">
    <%= render "shared/breadcrumbs", items: [
      { label: "Media", path: media_path },
      { label: @medium.filename }
    ] %>

    <% if notice.present? %>
      <div class="rounded-md bg-green-50 p-4 mb-6">
        <p class="text-sm font-medium text-green-800"><%= notice %></p>
      </div>
    <% end %>

    <% if alert.present? %>
      <div class="rounded-md bg-red-50 p-4 mb-6">
        <p class="text-sm font-medium text-red-800"><%= alert %></p>
      </div>
    <% end %>

    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <div class="aspect-video overflow-hidden bg-gray-100">
        <%= image_tag @medium.url, alt: @medium.alt_text || @medium.filename, class: "h-full w-full object-contain" %>
      </div>

      <div class="px-4 py-5 sm:px-6">
        <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
          <div>
            <dt class="text-sm font-medium text-gray-500">Filename</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @medium.filename %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Content Type</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @medium.content_type %></dd>
          </div>
          <% if @medium.width && @medium.height %>
            <div>
              <dt class="text-sm font-medium text-gray-500">Dimensions</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @medium.width %> x <%= @medium.height %></dd>
            </div>
          <% end %>
          <div>
            <dt class="text-sm font-medium text-gray-500">Uploaded By</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @medium.uploaded_by.email %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Uploaded At</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @medium.created_at.strftime("%B %d, %Y at %l:%M %p") %></dd>
          </div>
          <% if @medium.alt_text.present? %>
            <div class="sm:col-span-2">
              <dt class="text-sm font-medium text-gray-500">Alt Text</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @medium.alt_text %></dd>
            </div>
          <% end %>
          <div class="sm:col-span-2">
            <dt class="text-sm font-medium text-gray-500">Public URL</dt>
            <dd class="mt-1 text-sm text-gray-900 break-all">
              <a href="<%= @medium.url %>" target="_blank" class="text-indigo-600 hover:text-indigo-900"><%= @medium.url %></a>
            </dd>
          </div>
        </dl>
      </div>

      <% if @medium.in_use? %>
        <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
          <h3 class="text-base font-semibold text-gray-900 mb-4">Usage (<%= @medium.usage_count %>)</h3>
          <ul class="divide-y divide-gray-200">
            <% @medium.usage.each do |usage| %>
              <li class="py-3 flex justify-between items-center">
                <div>
                  <span class="text-sm font-medium text-gray-900"><%= usage[:name] %></span>
                  <span class="ml-2 inline-flex items-center rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-800"><%= usage[:type] %></span>
                </div>
                <% case usage[:type] %>
                <% when "Event" %>
                  <%= link_to "View", event_path(usage[:record]), class: "text-indigo-600 hover:text-indigo-900 text-sm" %>
                <% when "User" %>
                  <%= link_to "View", user_path(usage[:record]), class: "text-indigo-600 hover:text-indigo-900 text-sm" %>
                <% when "Team" %>
                  <%= link_to "View", team_path(usage[:record]), class: "text-indigo-600 hover:text-indigo-900 text-sm" %>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="border-t border-gray-200 px-4 py-4 sm:px-6 flex justify-end gap-4">
        <% can_delete = current_user.can?(:manage_all, :media) || @medium.uploaded_by == current_user %>
        <% if can_delete %>
          <% if @medium.in_use? %>
            <span class="text-sm text-gray-500 italic">Remove from all usages before deleting</span>
          <% else %>
            <%= button_to "Delete", medium_path(@medium), method: :delete, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700", data: { turbo_confirm: "Are you sure you want to delete this image?" } %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
