<% content_for :title, "Showing event registration" %>

<div class="md:w-2/3 w-full">
  <div class="flex justify-between items-center">
    <%= render "shared/breadcrumbs", items: [
      { label: "Event Registrations", path: event_registrations_path },
      { label: "Registration ##{@event_registration.id}" }
    ] %>
    <div class="flex space-x-2">
      <%= link_to "Edit", edit_event_registration_path(@event_registration), class: "rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium text-sm" %>
      <%= button_to "Destroy", @event_registration, method: :delete, class: "rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer text-sm", data: { turbo_confirm: "Are you sure?" } %>
    </div>
  </div>

  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <%= render @event_registration %>
</div>
