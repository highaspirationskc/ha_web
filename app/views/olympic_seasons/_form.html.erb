<%= form_with(model: olympic_season, url: olympic_season.persisted? ? olympic_season_path(olympic_season) : olympic_seasons_path, class: "space-y-6") do |form| %>
  <% if olympic_season.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <h3 class="text-sm font-medium text-red-800">
        <%= pluralize(olympic_season.errors.count, "error") %> prohibited this olympic season from being saved:
      </h3>
      <ul class="list-disc list-inside text-sm text-red-700 mt-2">
        <% olympic_season.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="bg-white shadow px-4 py-5 sm:rounded-lg sm:p-6">
    <div class="md:grid md:grid-cols-3 md:gap-6">
      <div class="md:col-span-1">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Olympic Season Information</h3>
        <p class="mt-1 text-sm text-gray-500">Enter the details for this olympic season.</p>
      </div>
      <div class="mt-5 md:mt-0 md:col-span-2">
        <div class="grid grid-cols-6 gap-6">
          <div class="col-span-6">
            <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :name, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
          </div>

          <div class="col-span-6 sm:col-span-3">
            <%= form.label :start_month, "Start Month", class: "block text-sm font-medium text-gray-700" %>
            <%= form.number_field :start_month, min: 1, max: 12, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
          </div>

          <div class="col-span-6 sm:col-span-3">
            <%= form.label :start_day, "Start Day", class: "block text-sm font-medium text-gray-700" %>
            <%= form.number_field :start_day, min: 1, max: 31, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
          </div>

          <div class="col-span-6 sm:col-span-3">
            <%= form.label :end_month, "End Month", class: "block text-sm font-medium text-gray-700" %>
            <%= form.number_field :end_month, min: 1, max: 12, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
          </div>

          <div class="col-span-6 sm:col-span-3">
            <%= form.label :end_day, "End Day", class: "block text-sm font-medium text-gray-700" %>
            <%= form.number_field :end_day, min: 1, max: 31, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to "Cancel", olympic_season.persisted? ? olympic_season_path(olympic_season) : olympic_seasons_path, class: "inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
    <%= form.submit class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
  </div>
<% end %>
