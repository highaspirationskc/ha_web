<div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
  <div class="px-4 py-6 sm:px-0">
    <div class="flex justify-between items-center">
      <%= render "shared/breadcrumbs", items: [
        { label: "Teams", path: teams_path },
        { label: @team.name }
      ] %>
      <% if current_user.can?(:edit, :teams) || current_user.can?(:delete, :teams) %>
        <div class="flex space-x-4">
          <% if current_user.can?(:edit, :teams) %>
            <%= link_to "Edit", edit_team_path(@team), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200" %>
          <% end %>
          <% if current_user.can?(:delete, :teams) %>
            <%= button_to "Delete Team", team_path(@team), method: :delete, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700", data: { confirm: "Are you sure?" } %>
          <% end %>
        </div>
      <% end %>
    </div>

    <% if notice.present? %>
      <div class="rounded-md bg-green-50 p-4 mb-6">
        <p class="text-sm font-medium text-green-800" id="notice"><%= notice %></p>
      </div>
    <% end %>

    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <div class="px-4 py-5 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Team Information</h3>
      </div>
      <div class="border-t border-gray-200">
        <dl>
          <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Name</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @team.name %></dd>
          </div>
          <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Color</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                <%= @team.color.titleize %>
              </span>
            </dd>
          </div>
          <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Icon</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
              <% if @team.icon.present? %>
                <%= image_tag @team.icon.thumbnail_url, alt: @team.name, class: "h-12 w-12 rounded-lg object-cover" %>
              <% else %>
                â€”
              <% end %>
            </dd>
          </div>
        </dl>
      </div>
    </div>

    <!-- Add Mentee Section -->
    <% if current_user.can?(:manage_members, :teams) && @available_mentees.any? %>
      <div class="mt-6 bg-white shadow overflow-hidden sm:rounded-lg">
        <div class="px-4 py-5 sm:px-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Add Mentee to Team</h3>
          <p class="mt-1 text-sm text-gray-500">Add a mentee to this team.</p>
        </div>
        <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
          <%= form_with url: add_member_team_path(@team), method: :post, class: "flex items-end space-x-4" do |f| %>
            <div class="flex-grow">
              <%= f.label :mentee_id, "Select Mentee", class: "block text-sm font-medium text-gray-700" %>
              <%= f.select :mentee_id, @available_mentees.map { |m| ["#{m.user.first_name} #{m.user.last_name} (#{m.user.email})", m.id] }, { prompt: "Choose a mentee..." }, class: "mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
            </div>
            <%= f.submit "Add to Team", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 cursor-pointer" %>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Mentees -->
    <div class="mt-6">
      <div class="flex justify-between items-center mb-4">
        <h3 class="text-lg leading-6 font-medium text-gray-900">
          Mentees (<%= @team.mentees.count %>)
        </h3>
        <% if @current_season %>
          <span class="px-3 py-1 text-sm font-semibold rounded-full bg-indigo-100 text-indigo-800">
            <%= @current_season.name %> Season
          </span>
        <% end %>
      </div>
      <div class="flex flex-col">
        <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
          <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
            <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
              <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                  <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Rank
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Name
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Email
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Mentor
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Season Points
                    </th>
                    <% if current_user.can?(:manage_members, :teams) %>
                      <th scope="col" class="relative px-6 py-3">
                        <span class="sr-only">Actions</span>
                      </th>
                    <% end %>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                  <% if @mentee_points.any? %>
                    <%
                      # Calculate ranks with tie handling (dense ranking)
                      current_rank = 1
                      previous_points = nil
                    %>
                    <% @mentee_points.each_with_index do |mentee_point, index| %>
                      <%
                        # Increment rank only if points changed (dense ranking)
                        if previous_points && mentee_point[:points] < previous_points
                          current_rank += 1
                        end
                        previous_points = mentee_point[:points]
                      %>
                      <tr class="<%= 'bg-yellow-50' if current_rank == 1 && mentee_point[:points] > 0 %>">
                        <td class="px-6 py-4 whitespace-nowrap">
                          <div class="flex items-center">
                            <% if current_rank == 1 && mentee_point[:points] > 0 %>
                              <span class="text-2xl">ðŸ¥‡</span>
                            <% elsif current_rank == 2 && mentee_point[:points] > 0 %>
                              <span class="text-2xl">ðŸ¥ˆ</span>
                            <% elsif current_rank == 3 && mentee_point[:points] > 0 %>
                              <span class="text-2xl">ðŸ¥‰</span>
                            <% else %>
                              <span class="text-sm font-medium text-gray-900"><%= current_rank %></span>
                            <% end %>
                          </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                          <%= link_to user_path(mentee_point[:user]), class: "text-sm font-medium text-indigo-600 hover:text-indigo-900" do %>
                            <%= mentee_point[:user].first_name %> <%= mentee_point[:user].last_name %>
                          <% end %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                          <%= mentee_point[:user].email %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                          <% if mentee_point[:mentee].mentor.present? %>
                            <%= link_to user_path(mentee_point[:mentee].mentor.user), class: "text-sm text-indigo-600 hover:text-indigo-900" do %>
                              <%= mentee_point[:mentee].mentor.user.first_name %> <%= mentee_point[:mentee].mentor.user.last_name %>
                            <% end %>
                          <% else %>
                            <span class="text-sm text-gray-400">â€”</span>
                          <% end %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                          <div class="text-2xl font-bold text-gray-900"><%= mentee_point[:points] %></div>
                          <div class="text-xs text-gray-500">points</div>
                        </td>
                        <% if current_user.can?(:manage_members, :teams) %>
                          <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            <%= button_to "Remove", remove_member_team_path(@team, mentee_id: mentee_point[:mentee].id), method: :delete, class: "text-red-600 hover:text-red-900", data: { confirm: "Remove #{mentee_point[:user].email} from this team?" }, form: { class: "inline" } %>
                          </td>
                        <% end %>
                      </tr>
                    <% end %>
                  <% else %>
                    <tr>
                      <td colspan="6" class="px-6 py-4 text-center text-sm text-gray-500">
                        No mentees on this team
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
