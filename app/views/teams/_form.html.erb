<div data-controller="image-picker" data-image-picker-category-value="icon">
<%= form_with(model: team, url: team.persisted? ? team_path(team) : teams_path, class: "space-y-6") do |form| %>
  <% if team.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <h3 class="text-sm font-medium text-red-800">
        <%= pluralize(team.errors.count, "error") %> prohibited this team from being saved:
      </h3>
      <ul class="list-disc list-inside text-sm text-red-700 mt-2">
        <% team.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="bg-white shadow px-4 py-5 sm:rounded-lg sm:p-6">
    <div class="md:grid md:grid-cols-3 md:gap-6">
      <div class="md:col-span-1">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Team Information</h3>
        <p class="mt-1 text-sm text-gray-500">Enter the details for this team.</p>
      </div>
      <div class="mt-5 md:mt-0 md:col-span-2">
        <div class="grid grid-cols-6 gap-6">
          <div class="col-span-6">
            <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :name, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
          </div>

          <div class="col-span-6 sm:col-span-3">
            <%= form.label :color, class: "block text-sm font-medium text-gray-700" %>
            <% available = team.persisted? ? (Team.available_colors + [team.color]).uniq : Team.available_colors %>
            <%= form.select :color, available.map { |k| [k.titleize, k] }, {}, { class: "mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" } %>
          </div>

          <div class="col-span-6 sm:col-span-3">
            <%= form.label :icon_id, "Team Icon", class: "block text-sm font-medium text-gray-700" %>
            <%= form.hidden_field :icon_id, data: { image_picker_target: "input" } %>

            <div class="mt-2">
              <div data-image-picker-target="placeholder" class="<%= team.icon.present? ? 'hidden' : '' %> flex items-center gap-4">
                <div class="h-12 w-12 rounded-lg bg-gray-200 flex items-center justify-center">
                  <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                </div>
                <button type="button" data-action="click->image-picker#openModal" class="text-sm text-indigo-600 hover:text-indigo-500">
                  Add icon
                </button>
              </div>

              <div data-image-picker-target="preview" class="<%= team.icon.blank? ? 'hidden' : '' %> flex items-center gap-4">
                <%= image_tag team.icon&.thumbnail_url || "", alt: "Team icon", class: "h-12 w-12 rounded-lg object-cover", data: { image_picker_target: "previewImage" } %>
                <div>
                  <p data-image-picker-target="previewName" class="text-sm font-medium text-gray-900"><%= team.icon&.filename %></p>
                  <div class="mt-1 flex gap-2">
                    <button type="button" data-action="click->image-picker#openModal" class="text-xs text-indigo-600 hover:text-indigo-500">Change</button>
                    <button type="button" data-action="click->image-picker#clear" class="text-xs text-red-600 hover:text-red-500">Remove</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to "Cancel", team.persisted? ? team_path(team) : teams_path, class: "inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
    <%= form.submit class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
  </div>
<% end %>

<!-- Icon Picker Modal (outside form to allow nested upload form) -->
<div data-image-picker-target="modal" class="hidden fixed inset-0 z-50 overflow-y-auto">
  <div data-image-picker-target="backdrop" data-action="click->image-picker#closeOnBackdrop" class="fixed inset-0 bg-black/50 transition-opacity">
    <div class="flex min-h-full items-center justify-center p-4">
      <div class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg">
        <div class="bg-white">
          <div class="flex items-center justify-between px-4 py-3 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900">Select Icon</h3>
            <button type="button" data-action="click->image-picker#closeModal" class="text-gray-400 hover:text-gray-500">
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>
          <div data-image-picker-target="modalContent" class="max-h-96 overflow-y-auto">
            <p class="p-4 text-center text-gray-500">Loading...</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
