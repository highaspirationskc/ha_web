<!DOCTYPE html>
<html>
  <head>
    <title>Higher Aspirations Admin</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  </head>

  <body>
    <% if current_user %>
      <nav class="bg-gray-800">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex items-center justify-between h-16">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <span class="text-white font-bold text-xl">Higher Aspirations</span>
              </div>
              <div class="hidden md:block">
                <div class="ml-10 flex items-baseline space-x-4">
                  <%= link_to "Dashboard", admin_dashboard_path, class: "text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium" %>
                  <%= link_to "Users", admin_users_path, class: "text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium" %>
                </div>
              </div>
            </div>
            <div class="flex items-center">
              <span class="text-gray-300 text-sm mr-4"><%= current_user.email %></span>
              <%= button_to "Logout", admin_logout_path, method: :delete, class: "text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium" %>
            </div>
          </div>
        </div>
      </nav>
    <% end %>

    <main>
      <% if flash[:notice] %>
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-4">
          <div class="rounded-md bg-green-50 p-4">
            <div class="text-sm text-green-700">
              <%= flash[:notice] %>
            </div>
          </div>
        </div>
      <% end %>

      <% if flash[:alert] %>
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-4">
          <div class="rounded-md bg-red-50 p-4">
            <div class="text-sm text-red-700">
              <%= flash[:alert] %>
            </div>
          </div>
        </div>
      <% end %>

      <%= yield %>
    </main>
  </body>
</html>
