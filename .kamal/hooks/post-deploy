#!/bin/sh

# Post-deploy hook to seed the database
# TODO: Remove this before production deployment

echo "Running database seed:replant (this will wipe and reseed all data)..."

# Run seed:replant command in the container to completely refresh test data
# Note: This runs kamal from within the hook to execute commands in the deployed container
kamal app exec -q "bin/rails db:seed:replant"

echo "Database seed:replant completed"
